{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AI": {
    "ModelId": "gpt-5.2",
    "Thinking": false
  },
  "McpServers": [
    {
      "Name": "Filesystem",
      "TransportType": "stdio",
      "Command": "npx",
      "Arguments": ["-y", "@modelcontextprotocol/server-filesystem", "C:/Source/chattest2"]
    },
    {
      "Name": "TimeServer",
      "TransportType": "stdio",
      "Command": "dotnet",
      "Arguments": ["run", "--project", "../ChatTest.McpTimeServer/ChatTest.McpTimeServer.csproj"]
    },
    {
      "Name": "PaintingServer",
      "TransportType": "stdio",
      "Command": "dotnet",
      "Arguments": ["run", "--project", "../ChatTest.McpPaintingServer/ChatTest.McpPaintingServer.csproj"]
    }
  ]
}
